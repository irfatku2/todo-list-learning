{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "import-spacing": true,
        "indent": [
            false,
            "tabs"
        ],
        "prefer-const": true,
        "quotemark": [
            true,
            "double"
        ],
        "member-access": false,
        "object-literal-sort-keys": false,
        "interface-name": false,
        "trailing-comma": false
    },
    "rulesDirectory": ["node_modules/codelyzer"]
}